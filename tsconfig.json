{
  "exclude": ["jest.config.ts"],
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "rootDir": "./",                                
    "baseUrl": "./",
    "outDir": "./.build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}
